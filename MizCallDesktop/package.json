{
  "name": "mizcalldesktop",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "author": "MizCall",
  "description": "MizCall Desktop - Professional voice calling application",
  "build": {
    "appId": "com.mizcall.desktop",
    "productName": "MizCall Desktop",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "assets/**/*",
      "!**/*.map"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        }
      ],
      "icon": "assets/Icons512/Group 6.png",
      "artifactName": "${productName}-${version}-Windows-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MizCall Desktop"
    },
    "portable": {
      "artifactName": "${productName}-${version}-Windows-Portable.exe"
    },
    "mac": {
      "category": "public.app-category.social-networking",
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/Icons512/Group 6.png",
      "artifactName": "${productName}-${version}-macOS-${arch}.${ext}",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "MizCall needs access to your microphone for voice calls.",
        "NSCameraUsageDescription": "MizCall needs access to your camera for video calls."
      }
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "assets/Icons512/Group 6.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network",
      "icon": "assets/Icons512/Group 6.png",
      "artifactName": "${productName}-${version}-Linux-${arch}.${ext}"
    }
  },
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "start": "electron-forge start",
    "build": "vite build",
    "build:win": "npm run build && electron-builder --win --x64",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "build:all": "npm run build && electron-builder -mwl",
    "test": "echo \"No tests yet\"",
    "lint": "echo \"No lint configured\"",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "mediasoup-client": "^3.18.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.2.1",
    "socket.io-client": "^4.8.3"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-dmg": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.0.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "typescript": "^5.4.0",
    "vite": "^5.4.0",
    "wait-on": "^7.2.0"
  }
}
