{
  "name": "mizcalldesktop",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "author": "MizCall",
  "description": "MizCall Desktop - Professional voice calling application",
  "build": {
    "appId": "com.mizcall.desktop",
    "productName": "MizCall Desktop",
    "mac": {
      "category": "public.app-category.social-networking",
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "extendInfo": {
        "NSMicrophoneUsageDescription": "MizCall needs access to your microphone for voice calls.",
        "NSCameraUsageDescription": "MizCall needs access to your camera for video calls."
      }
    }
  },
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "start": "electron-forge start",
    "build": "vite build",
    "test": "echo \"No tests yet\"",
    "lint": "echo \"No lint configured\"",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "mediasoup-client": "^3.18.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.2.1",
    "socket.io-client": "^4.8.3"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-dmg": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.0.1",
    "electron": "^39.2.7",
    "typescript": "^5.4.0",
    "vite": "^5.4.0",
    "wait-on": "^7.2.0"
  }
}
